<div class='login_background'>
  <div style='padding: 70px 30px 20px 100px'>
    <p style='font-size: 18px; font-weight: bold;'>注册评论用户</p>

    <%= form_for @comment_user, url: comment_users_path(article_id: params[:article_id]) do |f| %>
      <div>
        用户名: <%= f.text_field :username %>
        <p></p>
      </div>

      <div>
        密码: <%= f.password_field :password , style: 'margin-left: 15px;'%>
        <p></p>
      </div>

      <div>
      <%= f.hidden_field :article_id, value: params[:article_id] %>
      </div>

      <div>
        <%= f.submit '注册' %>
      </div>
    <% end %>

  </div>
</div>
<style>
html, body{
  background-image: url(<%= asset_path '6.jpg' %>);
  height: 100%;
  background-position: center center;
  background-size: cover;
  background-attachment: fixed;
}
.login_background{
  width: 600px;
  height: 350px;
  margin: 235px auto;
  background: white;
  opacity: 0.7;
  border-radius: 10px;
}
</style>
